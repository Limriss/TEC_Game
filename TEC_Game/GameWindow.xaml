<Window x:Class="TEC_Game.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEC_Game"
        mc:Ignorable="d"
        Title="GameWindow" Height="850" Width="1200">
    <Window.Resources>
        <ControlTemplate TargetType="Button" x:Key="NodeTemplate">
            <Border CornerRadius="25"
                    Background="black" Height="25" Width="25">
                <ContentControl VerticalAlignment="Center" Foreground="AliceBlue" Content="{TemplateBinding Content}" HorizontalAlignment="Center"/>
            </Border>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Button x:Name="ToMainMenuButton" Content="Меню" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ToMainMenuButton_Click" Width="50"/>

        <Canvas x:Name="GameGrid" HorizontalAlignment="Left" Height="780" Margin="10,30,0,0" VerticalAlignment="Top" Width="900" Background="#FFE4E4E4" />
        <Grid Margin="925,0,0,0" Background="#FFE2E2E2">
            <Border BorderThickness="1,0,0,0" BorderBrush="Black"/>
            <TextBox HorizontalAlignment="Left" Height="99" Margin="25,20,0,0" TextWrapping="Wrap" Text="Выберите элемент" VerticalAlignment="Top" Width="217" FontSize="36" Background="{x:Null}"/>
            <CheckBox Content="Нуллатор" HorizontalAlignment="Left" Margin="25,140,0,0" VerticalAlignment="Top" FontSize="28" Height="38" Width="188"/>
            <CheckBox Content="Норратор" HorizontalAlignment="Left" Margin="25,200,0,0" VerticalAlignment="Top" FontSize="28" Height="50" Width="188"/>
            <Button Content="Применить" HorizontalAlignment="Left" Margin="25,325,0,0" VerticalAlignment="Top" Width="188" FontSize="36" Height="60" Background="#FFB8B8B8"/>
        </Grid>
        <Canvas HorizontalAlignment="Left" Height="100" Margin="1415,445,-323,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
